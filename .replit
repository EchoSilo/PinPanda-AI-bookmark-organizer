modules = ["nodejs-18", "web", "python-3.11"]
run = "npm run dev"

[nix]
channel = "stable-24_05"
packages = ["libxcrypt"]

[deployment]
run = ["sh", "-c", "npm run dev"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PinPanda App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PinPanda Backend"

[[workflows.workflow]]
name = "PinPanda App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m http.server 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "PinPanda Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python start_backend.py"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"
